generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      =  env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  email String @unique
  firstname String?
  lastname String?
  password String
  todos Todo[]
  addresses Address[]
}

model Todo {
id Int @id @default(autoincrement())
title String
done Boolean @default(false)
description String?
userId Int
user   User  @relation(fields: [userId], references: [id])
}

model Address {
id Int @id @default(autoincrement())
address1 String
address2 String 
landmark String?
pincode  Int
userId   Int
user   User  @relation(fields: [userId], references: [id])
}